{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for express projects",
  "main": "src/index.js",
  "scripts": {
    "start": "node ./src/index.js",
    "lint": "./node_modules/.bin/eslint . --ext .js --fix",
    "docs": "apidoc -i src -o docs && apidoc-postman -i src -o docs/postman",
    "docs-postman": "apidoc-postman -i src -o docs",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imbudhiraja/express-boilerplate.git"
  },
  "keywords": [
    "express",
    "nodejs",
    "boilerplate",
    "socket.io"
  ],
  "author": "Manish Budhiraja",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imbudhiraja/express-boilerplate/issues"
  },
  "homepage": "https://github.com/imbudhiraja/express-boilerplate#readme",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ddos": "^0.2.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-server-logs": "^1.0.4",
    "express-validation": "^1.0.2",
    "helmet": "^3.18.0",
    "http-status": "^1.3.2",
    "joi": "^14.3.1",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.14",
    "luxon": "^1.17.1",
    "moment-timezone": "^0.5.26",
    "mongoose": "^5.7.5",
    "node-schedule": "^1.3.2",
    "sharp": "^0.22.1",
    "socket.io": "^2.2.0",
    "twilio": "^3.33.1",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "apidoc-postman": "0.0.92",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-config-imbudhiraja": "^1.0.4",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5"
  }
}
